<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper	namespace="cn.ibizlab.sample.core.sample.mapper.EventMapper">

        <!--通过mybatis将查询结果注入到entity中,通过配置autoMapping="true"由mybatis自动处理映射关系 -->
    <resultMap id="EventResultMap" type="cn.ibizlab.sample.core.sample.domain.Event" autoMapping="true">
		<id property="eventId" column="eventid" /><!--主键字段映射-->
    </resultMap>

    <select id="selectById"  resultMap="EventResultMap">
        <include refid="view" /> 
         where 
         t1.eventid=#{id}
    </select>

    <select id="selectEntity" parameterType="cn.ibizlab.sample.core.sample.domain.Event" resultMap="EventResultMap">
        <include refid="view" /> 
         where 
         (eventid = #{ eventId })
    </select>

    <select id="selectEntities" parameterType="java.util.List" resultMap="EventResultMap">
        <include refid="view" /> 
         where 
         (eventid)
         in (<foreach collection="list" item="item" index="index" separator=","> (#{ item.eventId }) </foreach>)
    </select>

    <sql id="default" databaseId="mysql">
        <![CDATA[ 
            SELECT t1.`BEGINTIME`, t1.`CREATEDATE`, t1.`CREATEMAN`, t1.`ENDTIME`, t1.`EVENTID`, t1.`EVENTNAME`, t1.`UPDATEDATE`, t1.`UPDATEMAN` FROM `T_EVENT` t1  
        ]]>    
    </sql>

    <sql id="simple" databaseId="mysql">
        <![CDATA[ 
            SELECT t1.`CREATEDATE`, t1.`CREATEMAN`, t1.`EVENTID`, t1.`EVENTNAME`, t1.`UPDATEDATE`, t1.`UPDATEMAN` FROM `T_EVENT` t1  
        ]]>    
    </sql>

    <sql id="view" databaseId="mysql">
        <![CDATA[ 
            SELECT t1.`BEGINTIME`, t1.`CREATEDATE`, t1.`CREATEMAN`, t1.`ENDTIME`, t1.`EVENTID`, t1.`EVENTNAME`, t1.`UPDATEDATE`, t1.`UPDATEMAN` FROM `T_EVENT` t1  
        ]]>    
    </sql>

    <select id="searchDefault"  parameterType="cn.ibizlab.sample.core.sample.filter.EventSearchContext"  resultType="EventResultMap">
        select t1.* 
        from (
            <include refid="default"/>
        ) t1 
        <where><if test="ew!=null and ew.sqlSegment!=null and !ew.emptyOfWhere">${ew.sqlSegment}</if></where>
        <if test="ew!=null and ew.sqlSegment!=null and ew.emptyOfWhere">${ew.sqlSegment}</if>
        
            
    </select>
    

</mapper>