<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper	namespace="ibizsample.core.sample.mapper.Example2Mapper">

        <!--通过mybatis将查询结果注入到entity中,通过配置autoMapping="true"由mybatis自动处理映射关系 -->
    <resultMap id="Example2ResultMap" type="ibizsample.core.sample.domain.Example2" autoMapping="true">
		<id property="example2Id" column="example2id" /><!--主键字段映射-->
		<result property="exampleId" column="exampleid" />
        <association property="example" javaType="ibizsample.core.sample.domain.Example" column="exampleid" select="ibizsample.core.sample.mapper.ExampleMapper.selectById" fetchType="lazy"></association>
    </resultMap>

    <select id="selectById"  resultMap="Example2ResultMap">
        <include refid="view" /> 
         where 
        t1.example2id=#{id}
    </select>

    <sql id="default" databaseId="mysql">
        <![CDATA[ 
            SELECT t1.`CREATEDATE`, t1.`CREATEMAN`, t1.`EXAMPLE2ID`, t1.`EXAMPLE2NAME`, t1.`EXAMPLEID`, t11.`EXAMPLENAME`, t1.`UPDATEDATE`, t1.`UPDATEMAN` FROM `T_EXAMPLE2` t1  LEFT JOIN `T_EXAMPLE` t11 ON t1.`EXAMPLEID` = t11.`EXAMPLEID`  
        ]]>    
    </sql>

    <sql id="simple" databaseId="mysql">
        <![CDATA[ 
            SELECT t1.`CREATEDATE`, t1.`CREATEMAN`, t1.`EXAMPLE2ID`, t1.`EXAMPLE2NAME`, t1.`UPDATEDATE`, t1.`UPDATEMAN` FROM `T_EXAMPLE2` t1  
        ]]>    
    </sql>

    <sql id="view" databaseId="mysql">
        <![CDATA[ 
            SELECT t1.`CREATEDATE`, t1.`CREATEMAN`, t1.`EXAMPLE2ID`, t1.`EXAMPLE2NAME`, t1.`EXAMPLEID`, t11.`EXAMPLENAME`, t1.`UPDATEDATE`, t1.`UPDATEMAN` FROM `T_EXAMPLE2` t1  LEFT JOIN `T_EXAMPLE` t11 ON t1.`EXAMPLEID` = t11.`EXAMPLEID`  
        ]]>    
    </sql>

    <select id="searchDefault"  parameterType="ibizsample.core.sample.filter.Example2SearchContext"  resultType="Example2ResultMap">
        select t1.* 
        from (
            <include refid="default"/>
        ) t1 
        <where><if test="ew!=null and ew.sqlSegment!=null and !ew.emptyOfWhere">${ew.sqlSegment}</if></where>
        <if test="ew!=null and ew.sqlSegment!=null and ew.emptyOfWhere">${ew.sqlSegment}</if>
        
            
    </select>
    
    <select id="selectByExampleId" resultMap="Example2ResultMap">
        <include refid="default" />
         where 
        exampleid = #exampleId
    </select>


</mapper>